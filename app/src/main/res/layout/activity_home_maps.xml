<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maps.HomeMapsActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Menu \u27A2 Locais"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHabilitarLocalizacao"
        style="@style/CKButton"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_buttons"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Ativar/Desativar minha localização"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProcurarLocal" />

    <Button
        android:id="@+id/btnSugestaoLocais"
        style="@style/CKButton"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/shape_buttons"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Sugestão de Locais"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/btnProcurarLocal"
        style="@style/CKButton"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_buttons"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Procurar Locais"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSugestaoLocais" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Lat.:"
        app:layout_constraintEnd_toStartOf="@+id/txtLatitude"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHabilitarLocalizacao" />

    <TextView
        android:id="@+id/txtLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="latitude"
        app:layout_constraintEnd_toStartOf="@+id/textView22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/btnHabilitarLocalizacao" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Lon.:"
        app:layout_constraintEnd_toStartOf="@+id/txtLongitude"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtLatitude"
        app:layout_constraintTop_toBottomOf="@+id/btnHabilitarLocalizacao" />

    <TextView
        android:id="@+id/txtLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="longitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/btnHabilitarLocalizacao" />

    <Button
        android:id="@+id/btnVoltarMenu"
        style="@style/CKButton"
        android:layout_width="128dp"
        android:layout_height="34dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_buttons"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Voltar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnProcurarLocal"
        app:layout_constraintTop_toBottomOf="@+id/btnHabilitarLocalizacao" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="ca-app-pub-9349248892305112/1196188793"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoltarMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>